#!/bin/sh

set -eu

. bin/_docker.sh
. bin/_tag.sh

dockerfile=cli/Dockerfile-bin

validate_go_deps_tag $dockerfile

bin/docker-build-base 1>&2
bin/docker-build-go-deps 1>&2

IMG=$(docker_build cli-bin "$(head_root_tag)" $dockerfile)

ID=$(docker create "$IMG")

# copy the newly built conduit cli binaries to the local system
for OS in darwin linux windows ; do
    DIR="target/cli/${OS}"
    mkdir -p "$DIR"

    if docker cp "$ID:/out/conduit-${OS}" "$DIR/conduit" ; then
        echo "$DIR/conduit"
    else
        docker rm "$ID" 1>&2
        exit 1
    fi
done

docker rm "$ID" 1>&2
